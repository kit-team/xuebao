<?xml version="1.0" encoding="utf-8"?>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/tab_ticketpieces"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:gravity="center_horizontal"
         android:orientation="vertical" >

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:orientation="vertical" >

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="62dp"
                 android:orientation="horizontal" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/mainform_num_text"
                     android:textSize="20sp" />

                 <EditText
                     android:id="@+id/mform_num_show_edt"
                     android:layout_width="203dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:singleLine="true"
                     android:textSize="18sp" >
                 </EditText>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="299dp"
                 android:layout_height="104dp"
                 android:layout_marginRight="27dp"
                 android:orientation="horizontal" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/otform_num_text"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/delfrom_num_btn"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="140dp"
                     android:layout_weight="0.20"
                     android:text="@string/delform_num_text"
                     android:textSize="20sp" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="125dp"
                 android:orientation="horizontal" >

                 <EditText
                     android:id="@+id/otform_num_show_edt"
                     android:layout_width="276dp"
                     android:layout_height="110dp" >
                 </EditText>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="61dp"
                 android:orientation="horizontal" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/otform_num_text"
                     android:textSize="20sp" />

                 <EditText
                     android:id="@+id/otform_num_edt"
                     android:layout_width="208dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:singleLine="true"
                     android:textSize="18sp" >
                 </EditText>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="188dp"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                 <TextView
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:text="@string/total_text"
                     android:textSize="20sp" />

                 <TextView
                     android:id="@+id/toform_num_textv"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:text="@string/zero_text"
                     android:textColor="#FF0000"
                     android:textSize="20sp" />

                 <TextView
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:text="@string/piece_text" />
             </LinearLayout>
         </LinearLayout>

                  <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="7"
          android:orientation="vertical" >
    <View  
           android:layout_height="1px"
           android:background="#FFFFFF"    
           android:layout_width="fill_parent"></View>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

           <Button
            android:id="@+id/rec_back_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="@string/back_text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/rec_save_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_text"
            android:textSize="20sp" />
    </LinearLayout>
          </LinearLayout>
     </LinearLayout>
  