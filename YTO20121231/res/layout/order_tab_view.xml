<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/top_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tab_order_list"
            style="@style/TabItemTextView"
            android:tag="@string/tab_order_list"
            android:text="@string/tab_order_list" />

        <TextView
            android:id="@+id/tab_order_detail"
            style="@style/TabItemTextView"
            android:tag="@string/tab_order_detail"
            android:text="@string/tab_order_detail" />
    
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/order_viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>