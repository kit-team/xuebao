<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_list_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/way_bill_no"
            android:layout_marginRight="10dp"
            android:textColor="@color/key"
            android:textSize="16dp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txt_list_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/value"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txt_list_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title_list_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:text="@string/tran_pri_text" />

            <TextView
                android:id="@+id/txt_list_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>