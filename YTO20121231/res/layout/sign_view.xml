<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!-- Tracking Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/label_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText android:id="@+id/edit_tracking_number"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- Sign Result -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <TextView
            android:text="@string/label_sign_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <Spinner android:id="@+id/spinner_sign_result"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"/>

    </LinearLayout>

    <!-- Exception Reason -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <TextView
            android:text="@string/label_exception_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <Spinner android:id="@+id/spinner_exception_reason"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="1"/>

    </LinearLayout>

    <!-- Satisfaction Degree -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <TextView
            android:text="@string/label_satisfaction_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <RadioGroup
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <RadioButton
                 android:text="@string/label_very_satisfactory"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <RadioButton
                 android:text="@string/label_satisfactory"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

              <RadioButton
                 android:text="@string/label_unsatisfactory"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

          </RadioGroup>

    </LinearLayout>

    <TextView
        android:text="@string/label_handwritten_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/edit_handwritten_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/label_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>"

</LinearLayout>
