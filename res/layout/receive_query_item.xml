<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azure"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp" >

    <TextView
        style="@style/ListItemTableText"
        android:id="@+id/order_number_text"
        android:layout_marginRight="1dp"
        android:layout_weight="3"
        android:text="@string/way_bill_no"  />

    <TextView
        style="@style/ListItemTableText"
        android:id="@+id/order_upload_state_text"
        android:layout_marginRight="1dp"
        android:layout_weight="3"
        android:text="@string/operate_time" />

    <TextView
         style="@style/ListItemTableText"
        android:id="@+id/order_state_text"
        android:layout_weight="2"
        android:text="@string/tran_pri_text"/>

</LinearLayout>