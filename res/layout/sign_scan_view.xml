<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical" >
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:background="@drawable/top_bg" 
        android:orientation="horizontal" >
        
        <TextView android:id="@+id/tab_sign_success"
            android:text="@string/tab_sign_success"
            android:tag="@string/tab_sign_success"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/menu_bg" />
        
        <TextView android:id="@+id/tab_sign_failed"
            android:text="@string/tab_sign_failed"
            android:tag="@string/tab_sign_failed"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"  />
        
         <TextView android:id="@+id/tab_way_detail"
            android:text="@string/tab_waybill_detail"
            android:tag="@string/tab_waybill_detail"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"  />
        
        <TextView android:id="@+id/tab_order_query"
            android:text="@string/tab_order_query"
            android:tag="@string/tab_order_query"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical" />
        
    </LinearLayout>
    
   <android.support.v4.view.ViewPager
      android:id="@+id/slideMenu"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
      
 </LinearLayout>
