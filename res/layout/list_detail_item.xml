<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/head_tracking_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12345678901"
            android:textAppearance="@android:style/TextAppearance.Medium"
        	android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/head_sign_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="不确定类型"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/head_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/top"
        android:text="2012/12/22"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:id="@+id/head_receipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_toLeftOf="@id/head_sign_time"
        android:paddingRight="8dp"
        android:text="Jacky Cheng DD"
        android:textAppearance="@android:style/TextAppearance.Small" />

</RelativeLayout>