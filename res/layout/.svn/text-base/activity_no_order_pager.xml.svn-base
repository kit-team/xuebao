<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/TabBarLayout" >

        <TextView
            android:id="@+id/tab_no_order_usual"
            style="@style/TabItemTextView"
            android:tag="@string/receive_usual"
            android:text="@string/receive_usual" />

        <TextView
            android:id="@+id/tab_no_order_freight"
            style="@style/TabItemTextView"
            android:tag="@string/receive_collection_freight_at_des"
            android:text="@string/receive_collection_freight_at_des" />
        
        <TextView
            android:id="@+id/tab_no_order_receipt"
            style="@style/TabItemTextView"
            android:tag="@string/receive_return_receipt"
            android:text="@string/receive_return_receipt" />
        
        <TextView
            android:id="@+id/tab_no_order_ticket"
            style="@style/TabItemTextView"
            android:tag="@string/piece_of_ticket"
            android:text="@string/piece_of_ticket" />
    
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/order_viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>