<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/emergency_delivery_deadtime"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
    <TextView
        android:id="@+id/emergency_delivery_id"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
       />
    
    <TextView
        android:id="@+id/emergency_delivery_message_content"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/emergency_delivery_receiver_id"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
    <TextView
        android:id="@+id/emergency_delivery_receiver_name"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
</LinearLayout>