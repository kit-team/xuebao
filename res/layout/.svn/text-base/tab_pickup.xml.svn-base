<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
   android:orientation="vertical" android:layout_width="fill_parent"  
    android:layout_height="fill_parent">  
    <LinearLayout 
        android:id="@+id/tab_pickup" 
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" 
        android:gravity="center_horizontal"  
        android:orientation="vertical">  
  
    
    
             <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/way_bill_no" />



             <EditText
                 android:id="@+id/form_num_edt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
         </LinearLayout>
                     <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/des_city_text" />

             <EditText
                 android:id="@+id/des_city_edt"
                 android:layout_width="103dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:singleLine="true"
                 android:textSize="18sp" >
             </EditText>


              <Spinner
                  android:id="@+id/des_city_spi"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" >
                  
              </Spinner>    
             
             </LinearLayout>
           <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/rec_addr_text" />


             <EditText
                 android:id="@+id/rec_addr_edt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
         </LinearLayout>
                     <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/rec_client_text" />


             <EditText
                 android:id="@+id/rec_client_edt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
         </LinearLayout>
                     <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/rec_call_text" />


             <EditText
                 android:id="@+id/rec_call_edt"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:scrollHorizontally="true"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
                         <TextView
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:text="@string/volume_text" />


             <EditText
                 android:id="@+id/rec_volume_edt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:scrollHorizontally="true"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
         </LinearLayout>
                      <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/tran_pri_text" />


             <EditText
                 android:id="@+id/tran_pri_edt"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:scrollHorizontally="true"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
                         <TextView
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:text="@string/weight_text" />


             <EditText
                 android:id="@+id/rec_weight_edt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:scrollHorizontally="true"
                 android:singleLine="true"
                 android:textSize="18sp" >

             </EditText>
         </LinearLayout>
                     <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 android:text="@string/time_effe_text" />
                
                   <Spinner
                  android:id="@+id/time_effe_spi"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" >
                     </Spinner>  
                 </LinearLayout>   
                 
            <View  
           android:layout_height="1px"
           android:background="#FFFFFF"    
           android:layout_width="fill_parent"></View>

          <RelativeLayout
              android:layout_width="fill_parent"
              android:layout_height="53dp"
              android:focusable="true" >

           <Button
               android:id="@+id/back_btn"
               android:layout_width="100dp"
               android:layout_height="60dp"
               android:layout_alignParentBottom="true"
               android:text="@string/back_text" />

           <Button
               android:id="@+id/save_btn"
               android:layout_width="100dp"
               android:layout_height="60dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:text="@string/save_text" />
       </RelativeLayout>
        
       </LinearLayout> 
    
     <include layout="@layout/tab_collection" />
      <include layout="@layout/tab_signform" />
       <include layout="@layout/tab_ticketpieces" /> 


 </LinearLayout> 
